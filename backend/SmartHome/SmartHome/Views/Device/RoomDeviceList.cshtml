@model IEnumerable<SmartHome.Models.Device>
@{
    ViewData["Title"] = "Room Device List";
}

<h1>Room Device List</h1>

<a asp-area="" asp-controller="Device" asp-action="OpenAddDeviceWindow">New Device</a> | <a asp-area="" asp-controller="Scenario" asp-action="AddScenario">New Scenario</a>
<br />
<ul class="list-group">
    @foreach (var device in Model)
    {
    <li class="list-group-item">
        @device.Name
            <span class="badge" style="float: right;">
                <div class="custom-control custom-switch">
                    @if (device.State == DeviceState.Off)
                    {
                        <input type="checkbox" class="custom-control-input" id="customSwitch1"> @* reikia sutvarkyt switchus *@
                        <label class="custom-control-label" for="customSwitch1"></label>
                    }
                    else if (device.State == DeviceState.On)
                    {
                        <input type="checkbox" class="custom-control-input" id="customSwitch1" checked>
                        <label class="custom-control-label" for="customSwitch1"></label>
                    }
                    else
                    {
                        <span>broken</span>
                    }
                </div>
            </span>
                
    </li>
    }
</ul>
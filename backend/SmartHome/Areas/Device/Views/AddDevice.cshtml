@model SmartHome.ViewModels.AddDeviceViewModel
@{
    ViewData["Title"] = "AddDevice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddDevice</h1>

@using (Html.BeginForm("AddDevice", "Device", FormMethod.Post, new { deviceData = Model }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @*@Html.TextBoxFor(model => model.RoomId, new { @Value = @ViewData["RoomID"] })*@
    @Html.HiddenFor(model => model.RoomID)

    @Html.EditorFor(model => model.IpAddress, new { htmlAttributes = new { @class = "form-control mb-4", @type = "text", @placeholder = "Ip Address..." } })
    @Html.ValidationMessageFor(model => model.IpAddress)

    @Html.EditorFor(model => model.Port, new { htmlAttributes = new { @class = "form-control mb-4", @type = "number", @placeholder = "Port..." } })
    @Html.ValidationMessageFor(model => model.Port)


    <div>
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>

}
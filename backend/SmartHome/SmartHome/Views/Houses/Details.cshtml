@model SmartHome.Models.House

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<a asp-controller="Room" asp-action="Create">Add Room</a>
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Room</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model.Rooms)
        {
            <tr>
                <th scope="row">@Html.DisplayFor(roomItem => room.Name)</th>
                <td style="text-align: right;">
                    <a asp-area="" asp-controller="Rooms" asp-action="Details" asp-route-id="10">select</a> |
                    <a asp-area="" asp-controller="Rooms" asp-action="Edit" asp-route-id="10" disabled>update</a> |
                    <a asp-area="" asp-controller="Rooms" asp-action="Delete" asp-route-id="10" disabled>delete</a>
                </td>
            </tr>
        }
        </tbody>
</table>

<div>
    <h4>House</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Owner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Owner.Password)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
